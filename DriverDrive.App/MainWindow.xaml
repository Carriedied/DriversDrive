<Window x:Class="DriverDrive.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverDrive.App"
        xmlns:converters="clr-namespace:DriverDrive.View.Converters;assembly=DriverDrive.View"
        mc:Ignorable="d"
        Title="Драйверный Драйв" Height="700" Width="900"
        Background="#F3F3F3"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">
  <Window.Resources>
    <converters:DriverStatusToColorConverter x:Key="StatusToColorConverter"/>
    <converters:InstallDriverParamsConverter x:Key="InstallDriverParamsConverter"/>

    <!-- Стиль для кнопки -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
      <Setter Property="Background" Value="#0078D4"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Padding" Value="15,8"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" CornerRadius="6">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#106EBE"/>
              </Trigger>
              <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#005A9E"/>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- Стиль для заголовка -->
    <Style x:Key="TitleStyle" TargetType="TextBlock">
      <Setter Property="FontSize" Value="24"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Foreground" Value="#333333"/>
      <Setter Property="HorizontalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <!-- Стиль для статуса -->
    <Style x:Key="StatusStyle" TargetType="TextBlock">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Foreground" Value="#D32F2F"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <!-- Стиль для карточки компьютера -->
    <Style x:Key="ComputerCardStyle" TargetType="Border">
      <Setter Property="Background" Value="White"/>
      <Setter Property="Padding" Value="15"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Margin" Value="0,0,0,15"/>
      <Setter Property="Effect">
        <Setter.Value>
          <DropShadowEffect Color="#22000000" BlurRadius="10" ShadowDepth="2"/>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- Стиль для заголовка устройства -->
    <Style x:Key="DeviceNameStyle" TargetType="TextBlock">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Width" Value="250"/>
    </Style>

    <!-- Стиль для статуса устройства -->
    <Style x:Key="DeviceStatusStyle" TargetType="TextBlock">
      <Setter Property="FontSize" Value="14"/>
      <Setter Property="Width" Value="100"/>
    </Style>

  </Window.Resources>

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <TextBlock Grid.Row="0" Text="Центральное управление драйверами" Style="{StaticResource TitleStyle}"/>

    <!-- Панель действий -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
      <Button Content="Сканировать сеть" Style="{StaticResource ModernButtonStyle}" Command="{Binding ScanCommand}" Margin="0,0,15,0"/>
      <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource StatusStyle}"/>
    </StackPanel>

    <!-- Список компьютеров -->
    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
      <ItemsControl ItemsSource="{Binding Computers}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Style="{StaticResource ComputerCardStyle}">
              <StackPanel>
                <!-- Информация о компьютере -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                  <TextBlock Text="{Binding Hostname}" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,10,0"/>
                  <TextBlock Text="{Binding IP}" FontSize="14" Foreground="#777777"/>
                </StackPanel>

                <!-- Список устройств -->
                <ItemsControl ItemsSource="{Binding Devices}" Margin="20,0,0,0">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                        <TextBlock Text="{Binding Name}" Style="{StaticResource DeviceNameStyle}"/>
                        <TextBlock Text="{Binding DriverStatus}" Style="{StaticResource DeviceStatusStyle}" Foreground="{Binding DriverStatus, Converter={StaticResource StatusToColorConverter}}"/>
                        <Button Content="Установить" Style="{StaticResource ModernButtonStyle}" Padding="10,4" Margin="10,0,0,0" FontSize="12"
                                Command="{Binding DataContext.InstallDriverCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding .}"/>
                      </StackPanel>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</Window>
